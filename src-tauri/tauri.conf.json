{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "annotate-studio",
  "version": "0.1.0",
  "identifier": "com.annotate-studio",
  "build": {
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../src"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../src"
    },
    "devUrl": "http://localhost:3000",
    "frontendDist": "../src/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Annotate Studio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "libs/pdfium/windows-x64/pdfium.dll": "./",
      "libs/pdfium/linux-x64/libpdfium.so": "./",
      "libs/pdfium/macos-x64/libpdfium.dylib": "./",
      "libs/pdfium/macos-arm64/libpdfium.dylib": "./"
    }
  }
}
